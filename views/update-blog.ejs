<div class="container">
  <form class="form-horizontal" method='POST' action="http://localhost:3000/api/blogs/<%= detail.blogId %>?_method=PUT">
    
    <div class="form-group" >
      <label class="control-label col-sm-2" for="author">Author</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="author" placeholder="Enter Author Name" name="author" value="<%= detail.author %>" required>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Title:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title" value="<%= detail.title %>" required>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="blogText">Description:</label>
      <div class="col-sm-10">
      <textarea class="form-control" rows="5" id="blogText" name="blogText" required><%= detail.blogText %></textarea>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-6 col-sm-10">
       <button type="submit" class="btn btn-primary" onclick="redirect()">Update Blog</button>
      </div>
    </div>
  </form>
</div>
