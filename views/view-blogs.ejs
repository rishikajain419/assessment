<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Website Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" language="javascript">
     function deleteAlert()
      {
          alert('Blog deleted Successfully!!')
      }
      function updateBlog(){
        alert('updated successfully')
      }
      
    </script>
    <style>
      .fakeimg {
        height: 200px;
        background: #aaa;
      }
      .feature {
        display: block;
        width: 100%;
        margin: 0;
      }

      .author {
        font-style: italic;
        line-height: 1.3;
        color: #aab6aa;
      }

      .blog-stripe .block-title {
        background: black;
        width: 100%;
        color: white;
        height: 100px;
        padding-top: 20px;
      }

      .all-blogs .media {
        margin-left: -40px;
        padding-bottom: 20px;
        border-bottom: 1px solid #cccccc;
      }
    </style>
  </head>
  <body>
    <div class="jumbotron text-center" style="margin-bottom: 0; height: 175px">
      <h1>My Blogging Site</h1>
    </div>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button
            type="button"
            class="navbar-toggle"
            data-toggle="collapse"
            data-target="#myNavbar"
          >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Blogger</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><a href="http://localhost:3000/">Home</a></li>
            <li><a href="http://localhost:3000/addBlog">Add Blog</a></li>
            <li class="active">
              <a href="/api/blogs">View Blogs</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        
        <div class="col-md-10 col-lg-12">
          <ul class="all-blogs">
            <% blogs.forEach(function(blog) { %>
            <li class="media">
              <div class="media-body">
                <h4 class="media-heading">Title: <%= blog.title %></h4>
                <p class="author">By <%= blog.author %></p>
             
              <div class="col-md-16" >
                <a href="/api/blogs/<%= blog.blogId%>"><button class="btn btn-default" style="background-color: #4CAF50;color:white"><i class="glyphicon glyphicon-eye-open"></i> Read More </button></a>
                <a style="margin-left: 1em" href='http://localhost:3000/api/blogs/<%= blog.blogId %>?_method=EDIT' ><button class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> Edit</button></a>
                <a style="margin-left: 0.2em" href='http://localhost:3000/api/blogs/<%= blog.blogId %>?_method=DELETE' onclick="deleteAlert()"><button class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</button></a></td> 
              </div>
              </div>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
    <hr />
  </body>
</html>
